<com.ljw4dakeai.mapper namespace="com.ljw4dakeai.mybatis.com.ljw4dakeai.mapper.SelectMapper">
    <!--User selectByUserId(@Param("id")  Integer id);-->
    <select id="selectByUserId" resultType="User">
        select * from tb_user
        where id = #{id,jdbcType=INTEGER};

    </select>
    <!--    List<User> selectAllUser(); -->
    <select id="selectAllUser" resultType="User">
        select * from tb_user;
    </select>

    <!--
        mybatis为java常用数据类型设置了别名
        Integer ->  int / integer
        Map -> map
        List -> list
        String -> string
    -->
    <!--Integer selectCountUser();-->
    <select id="selectCountUser" resultType="Integer">
        select count(id) from  tb_user
    </select>

    <!-- Map<String, Object> getUserByIDToMap(@Param("id") Integer id);-->
    <select id="getUserByIDToMap"  resultType="Map">
        select * from tb_user
        where id = #{id,jdbcType=INTEGER}
    </select>
